<div id="<%= dom_id movie %>">
  <div class="group">
    <h1>
      <%= movie.title %>
    </h1>
  </div>

  <div class="group">
    <p>
      <strong>Rating:</strong>
    </p>
    <p>
      <%= movie.rating %>
    </p>
  </div>

  <div class="group">
    <p>
      <strong>Description:</strong>
    </p>
    <p>
      <%= movie.description %>
    </p>
  </div>

  <div class="group">
  <p>
    <strong>Release date:</strong>
  </p>
  <p>
    <%= movie.release_date %>
  </p>
  </div>

</div>
