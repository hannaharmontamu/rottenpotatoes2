<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable_link('title', 'Title') %></th>
      <th><%= sortable_link('rating', 'Rating') %></th>
      <th><%= sortable_link('release_date', 'Release Date') %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
        <td>
          <%= link_to "Show", movie_path(movie) %> |
          <%= link_to "Edit", edit_movie_path(movie) %> |
          <%= link_to "Delete", movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to "New movie", new_movie_path %>
</p>